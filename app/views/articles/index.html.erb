<h1 class="page-header">投稿一覧</h1>

<div class="row">
  <div class="col-xs-12">
    <%= will_paginate @articles %>
    <table class="table table-striped">
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>トピック</th>
        <th>詳細へ</th>
      </tr>
      <% @articles.each do |f| %>
      <tr>
        <td><%= link_to f.user.name, f.user %></td>
        <td><%= f.title %></td>
        <td><%= f.topic %>
        <td><%= link_to '本文へ', f %></td>
      </tr>
      <% end %>
    </table>
    <%= will_paginate @articles %>
  </div>
</div>