<h1 class="page-header">投稿一覧</h1>

<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
    <%= will_paginate @articles %>
    <table class="table table-striped">
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>トピック</th>
        <th>詳細へ</th>
      </tr>
      <% @articles.each do |f| %>
      <tr>
        <td><%= link_to f.user.name, f.user %></td>
        <td><%= f.title %></td>
        <td><%= f.topic %>
        <td><%= link_to '本文へ', f %></td>
      </tr>
      <% end %>
    </table>
    <%= will_paginate @allarticles %>
</div>
<!--　ここからサイド -->
<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
<table class="table table-striped">
  <h4 class="brand">人気記事 Popular Articles</h4>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
  </tr>
  <% @rankings.each do |a| %>
  <tr>
    <td><%= image_tag(a.user.avatar_url, width: 75, height: 75, class: 'img-rounded') if a.user.avatar? %></td>
    <td><%= link_to a.title, a %></td>
  </tr>
  <% end %>
</table>
<table class="table table-striped">
  <h4 class="brand">最新記事 New Articles</h4>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
  </tr>
  <% @latestarticles.each do |a| %>
  <tr>
    <td><%= link_to a.user.name, a.user %><br />
      <%= image_tag(a.user.avatar_url, width: 75, height: 75, class: 'img-rounded') if a.user.avatar? %></td>
    <td><%= link_to a.title, a %></td>
  </tr>
  <% end %>
</table>
</div>  
<!-- /ここまでサイド -->