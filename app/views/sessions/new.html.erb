<h4 class="title">ログイン</h4>
  <%= form_for(:session, url: sessions_path) do |f| %>

    <div class="form-group row">
  	  <label class="control-label col-xs-12 col-lg-3">メールアドレス</label>
  	  <div class="col-xs-12 col-lg-9"><%= f.text_field :email, size: 100 %>
      </div>
    </div>

    <div class="form-group row">
  	  <label class="control-label col-xs-12 col-lg-3">パスワード</label>
  	  <div class="col-xs-12 col-lg-9"><%= f.password_field :password %>
      </div>
    </div>

  	<%= f.submit "ログイン", class: "btn btn-large btn-success btn-block" %>
  <% end %>
    