<% if signed_in? %>
<div class="row">
  <div class="col-xs-12">
    <h2>Your Following User's Articles ! </h2>
    <% if @feed_items.any? %>
      <ol class="microposts">
      <%= render partial: 'shared/feed_item', collection: @feed_items %>
      </ol>
    <%= will_paginate @feed_items %>
    <% end %>
  </div>
</div>
<% end %>


<%= link_to 'create a post', new_article_path, class: 'btn btn-success btn-large' %>
<hr>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <caption>Latest Posts</caption>
        <tr>
          <th>Author</th>
          <th>Topic</th>
          <th>Title</th>
          <th>More</th>
        </tr>
        <% @articles.each do |a| %>
        <tr>
          <td><%= link_to a.user.name, a.user %></td>
          <td><%= a.topic %></td>
          <td><%= a.title %></td>
          <td><%= link_to 'more', a %></td>
        </tr>
        <% end %>
    </table>
  </div>
</div>

