<h1 class="page-header">プロフィールページ</h1>

<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
    <section>
      <h4 class="brand">基本情報</h4>
      <% if @user.avatar? %>
      <p>アバター画像</p>
      <%= image_tag(@user.avatar_url) if @user.avatar? %>
      <hr>
      <% else %>
      <p>アバター画像がまだ設定されていません</p>
      <% end %>
      <table class="table table-bordered profile">
        <tr>
          <td>お名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>フォロー</td>
          <td><a href="<%= following_user_path(@user) %>">
                <strong id="following" class="stat">
                  <%= @user.followed_users.count %>
                </strong>
              </a>
          </td>
        </tr>
        <tr>
          <td>フォロワー</td>
          <td><a href="<%= followers_user_path(@user) %>">
                <strong id="followers" class="stat">
                  <%= @user.followers.count %>
                </strong>
              </a>
          </td>
        </tr>
        <tr>
          <td>いいね獲得数</td>
          <td><%= @user.reputation_for(:votes).to_i %></td>
        </tr>
      </table>
    </section>
    <!--<section>
      <%= render 'shared/stats' %>
    </section>-->

    <%= render 'follow_form' if signed_in? %>
    <% if @user.articles.any? %>
      <h3>Articles (<%= @user.articles.count %>)</h3>
        <!--<%= render @articles %>-->
        <table class="table table-striped">
          <tr>
            <th>トピック</th>
            <th>タイトル</th>
            <th>詳細</th>
          </tr>
          <% @articles.each do |a| %>
          <tr>
            <td><%= a.topic %></td>
            <td><%= a.title %></td>
            <td><%= link_to '本文へ', a %></td>
          </tr>
          <% end %>
        </table>
      <%= will_paginate @articles %>
    <% else %>
      <h3>まだ投稿がありません。</h3>
    <% end %>
</div>
<!--　ここからサイド -->
<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
<table class="table table-striped">
  <h4 class="brand">人気記事 Popular Articles</h4>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
  </tr>
  <% @rankings.each do |a| %>
  <tr>
    <td><%= image_tag(a.user.avatar_url, width: 75, height: 75, class: 'img-rounded') if a.user.avatar? %></td>
    <td><%= link_to a.title, a %></td>
  </tr>
  <% end %>
</table>
<table class="table table-striped">
  <h4 class="brand">最新記事 New Articles</h4>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
  </tr>
  <% @latestarticles.each do |a| %>
  <tr>
    <td><%= link_to a.user.name, a.user %><br />
      <%= image_tag(a.user.avatar_url, width: 75, height: 75, class: 'img-rounded') if a.user.avatar? %></td>
    <td><%= link_to a.title, a %></td>
  </tr>
  <% end %>
</table>
</div>  
<!-- /ここまでサイド -->
