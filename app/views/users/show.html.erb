<h1 class="page-header">プロフィールページ</h1>

<!-- コンテンツ -->

<div class="row">

<!-- サイドバー -->

  <aside class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <section>
      <h4 class="restitle text-center">基本情報</h4>
      <table class="table table-bordered">
        <tr>
          <td>プロフィール画像</td>
          <td><%= image_tag(@user.avatar_url) if @user.avatar? %></td>
        <tr>
          <td>お名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>Following</td>
          <td><a href="<%= following_user_path(@user) %>">
                <strong id="following" class="stat">
                  <%= @user.followed_users.count %>
                </strong>
              </a>
          </td>
        </tr>
        <tr>
          <td>Followers</td>
          <td><a href="<%= followers_user_path(@user) %>">
                <strong id="followers" class="stat">
                  <%= @user.followers.count %>
                </strong>
              </a>
          </td>
      </table>
    </section>
    <!--<section>
      <%= render 'shared/stats' %>
    </section>-->
  </aside>

<!-- /サイドバー -->

<!-- メイン -->

  <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.articles.any? %>
      <h3>Articles (<%= @user.articles.count %>)</h3>
        <!--<%= render @articles %>-->
        <table class="table table-striped">
          <tr>
            <th>Topic</th>
            <th>Title</th>
            <th>More</th>
          </tr>
          <% @articles.each do |a| %>
          <tr>
            <td><%= a.topic %></td>
            <td><%= a.title %></td>
            <td><%= link_to 'more', a %></td>
          </tr>
          <% end %>
        </table>
      <%= will_paginate @articles %>
    <% else %>
      <h3>まだ投稿がありません</h3>
    <% end %>
  </div>

<!-- /メイン -->

</div>

<!-- /コンテンツ -->
